<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hospitality_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/highlighted_text_material_dark"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:id="@+id/rlHospitality"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvHospitality"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Hospitality"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llHospitalityInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvHospitalityContentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>